<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src='../../defines.css' type='com.gwtplatform.samples.tab.client.application.ui.tabs.BaseTab.Style'>
        .tab {
           
            margin-right: 8px;
            margin-left: 8px;
            text-align: center;
            display: table-cell;
            border-right-width: 2px;
            border-right-style: solid;
            border-right-color: white;
            border-left-width: 2px;
            border-left-style: solid;
            border-left-color: white; 
        }

        .tab a, .tab a:visited, .tab a:hover {
            text-decoration: none;
            cursor: pointer;
            cursor: hand;
            color: black;
        }

        .tab_inner {
            margin: 0px;
            padding: 0px 13px;
        }

        .active {
            background-color: darkPanelColor;
        }

        .inactive {
            background-color: lightPanelColor;
        }

        .round1, .round2, .round4 {
            font-size: 0px;
            height: 1px;
            margin: 0px;
            padding: 0px;
        }

        .round1 {
            border-left: 1px solid white;
            border-right: 1px solid white;
        }

        .round2 {
            border-left: 2px solid white;
            border-right: 2px solid white;
        }

        .round4 {
            border-left: 4px solid white;
            border-right: 4px solid white;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.tab} {style.inactive}">
        <div class="{style.round4}"/>
        <div class="{style.round2}"/>
        <div class="{style.round1}"/>
        <div class="{style.tab_inner}">
            <g:Hyperlink ui:field="hyperlink"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
